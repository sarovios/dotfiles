[user]
    # TODO: Update these with your personal information
    name = Your Name
    email = your.email@example.com

[core]
    editor = code --wait
    autocrlf = input
    excludesfile = ~/.config/git/gitignore_global
    pager = delta

[init]
    defaultBranch = main

[push]
    default = current
    autoSetupRemote = true

[pull]
    rebase = true

[rebase]
    autoStash = true

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default

[delta]
    navigate = true
    light = false
    side-by-side = true
    line-numbers = true

[interactive]
    diffFilter = delta --color-only

[alias]
    # Status
    st = status
    s = status --short

    # Add
    a = add
    aa = add --all

    # Commit
    c = commit
    cm = commit -m
    ca = commit --amend
    can = commit --amend --no-edit
    com = "!f() { git add . && git commit -m \"$1\"; }; f"

    # Checkout
    co = checkout
    cb = checkout -b
    sw = switch
    swc = switch -c
    new = checkout -b

    # Branch
    b = branch
    br = branch -r
    ba = branch -a
    bd = branch -d
    bD = branch -D

    # Log
    l = log --oneline
    lg = log --oneline --graph --decorate
    lga = log --oneline --graph --decorate --all
    ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
    glog = log --oneline --graph --decorate

    # Diff
    d = diff
    ds = diff --staged
    dc = diff --cached

    # Remote
    r = remote
    rv = remote -v
    ra = remote add
    rr = remote remove

    # Push/Pull
    p = push
    pf = push --force-with-lease
    pl = pull
    pu = push -u origin HEAD
    push-current = "!git push -u origin $(git branch --show-current)"

    # Stash
    stash-save = stash
    stp = stash pop
    stl = stash list
    sts = stash show

    # Reset
    unstage = reset HEAD --
    undo = reset --soft HEAD~1
    hard-reset = reset --hard HEAD~1

    # Clean
    clean-branches = "!git branch --merged | grep -v '\\*\\|main\\|master\\|develop' | xargs -n 1 git branch -d"

[color]
    ui = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red
    new = green

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[github]
    user = yourgithubusername
